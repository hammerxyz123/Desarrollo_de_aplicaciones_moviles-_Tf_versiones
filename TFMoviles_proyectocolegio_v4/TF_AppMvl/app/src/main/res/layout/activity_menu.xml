<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#101010"
    android:padding="16dp"
    tools:context=".Gestion_festividades">

    <Button
        android:id="@+id/button_gestion_alumnos"
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="#F44336"
        android:text="Gestión de Alumnos"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/button_gestion_pagos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_gestion_pagos"
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="#FF5722"
        android:text="Gestión de Pagos"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/button_gestion_festividades"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_gestion_festividades"
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="#673AB7"
        android:text="Gestión de Festividades"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/button_elaborar_informes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_elaborar_informes"
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:layout_marginBottom="56dp"
        android:backgroundTint="#2196F3"
        android:text="Elaborar Informes"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="128dp"
        android:layout_height="83dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.019"
        tools:src="@tools:sample/avatars"
        tools:srcCompat="@drawable/usuario" />

    <TextView
        android:id="@+id/title"
        android:layout_width="149dp"
        android:layout_height="84dp"
        android:layout_marginStart="112dp"
        android:text="Menú Principal"
        android:textAlignment="center"
        android:textColor="#BAB2B2"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button_gestion_alumnos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.21" />


</androidx.constraintlayout.widget.ConstraintLayout>
